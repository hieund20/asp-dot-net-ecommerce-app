@model Ecommerce.UI.Models.AddProductViewModel

@{

}

<h1 class="mt-3">Thêm sản phẩm</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">Tên sản phẩm</label>
        <input type="text" class="form-control" asp-for="ProductName" />
    </div>

    <div class="mt-3">
        <label class="form-label">Đơn giá</label>
        <input type="text" class="form-control" asp-for="UnitPrice" />
    </div>

    <div class="mt-3">
        <label class="form-label">Mô tả</label>
        <textarea type="text" class="form-control" asp-for="Description"></textarea>
    </div>

    <div class="mt-3">
        <label class="form-label">Danh mục</label>
        <input type="text" class="form-control" asp-for="CategoryId" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-secondary">Lưu sản phẩm</button>
    </div>
</form>
