@using Microsoft.AspNetCore.Identity
@model IdentityUser

@{
}

<div class="user-profile d-flex justify-content-between gap-3">
    <div class="user-profile-avatar w-25">
        <img src="https://localhost:7168/Images/Itachi.png" alt="user-avatar" style="width: 100%" />
    </div>
    <div class="user-profile-information w-75">
        <div>
            <label class="form-label">Tên người dùng</label>
            <input type="text" readonly class="form-control" asp-for="@Model.UserName" />
        </div>
        <div class="mt-3">
            <label class="form-label">Email</label>
            <input type="text" readonly class="form-control" asp-for="@Model.Email" />
        </div>
        <div class="mt-3">
            <label class="form-label">Số điện thoại</label>
            <input type="text" readonly class="form-control" asp-for="@Model.PhoneNumber" />
        </div>
    </div>
</div>

