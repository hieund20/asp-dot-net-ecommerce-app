@model Ecommerce.UI.Models.DTO.RegisterRequestDto

@{
}

<h1 class="mt-3">Đăng ký</h1>


<form method="post">
    <div class="mt-3">
        <label class="form-label">Tên đăng nhập</label>
        <input type="text" class="form-control" asp-for="Username" />
    </div>

    <div class="mt-3">
        <label class="form-label">Mật khẩu</label>
        <input type="password" class="form-control" asp-for="Password" />
    </div>

    <div class="mt-3">
        <label class="form-label">Phân quyền</label>
        <select class="form-control" asp-for="Roles">
            <option value="Reader">Người dùng</option>
            <option value ="Writer">Người chỉnh sửa</option>
        </select>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-secondary">Đăng ký</button>
    </div>
</form>

