@{
    var productId = ViewBag.ProductId;
}

@model Ecommerce.UI.Models.AddProductImageViewModel

<h1 class="mt-3">Thêm hình ảnh sản phẩm</h1>

<form method="post" enctype="multipart/form-data">
    <div class="mt-3">
        <label class="form-label">Tên hình ảnh</label>
        <input type="text" class="form-control" asp-for="FileName" />
    </div>

    <div class="mt-3">
        <label class="form-label">Mô tả</label>
        <input type="text" class="form-control" asp-for="FileDesciption" />
    </div>

    <div class="mt-3">
        <label class="form-label">Sản phẩm</label>
        <input type="text" class="form-control" asp-for="ProductId" value="@productId" />
    </div>

    <div class="mt-3">
        <label class="form-label">File hình ảnh</label>
        <input type="file" class="form-control" asp-for="File" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-secondary">Lưu hình ảnh</button>
    </div>
</form>
