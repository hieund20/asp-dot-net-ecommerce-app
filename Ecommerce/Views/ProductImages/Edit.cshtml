@model Ecommerce.UI.Models.DTO.ProductImageDto

<h1 class="mt-3">Chỉnh sửa hình ảnh sản phẩm</h1>

<form method="post" enctype="multipart/form-data">
    <div class="d-flex justify-content-between">
        <div>
            <div class="mt-3">
                <label class="form-label">Id</label>
                <input type="text" class="form-control" asp-for="Id" readonly />
            </div>

            <div class="mt-3">
                <label class="form-label">Tên hình ảnh</label>
                <input type="text" class="form-control" asp-for="FileName" />
            </div>

            <div class="mt-3">
                <label class="form-label">Mô tả</label>
                <input type="text" class="form-control" asp-for="FileDesciption" />
            </div>

            <div class="mt-3">
                <label class="form-label">Sản phẩm</label>
                <input type="text" class="form-control" asp-for="ProductId" readonly />
            </div>

            <div class="mt-3">
                <label class="form-label">Đường dẫn</label>
                <input type="text" class="form-control" asp-for="FilePath" />
            </div>

            <div class="mt-3">
                <label class="form-label">File hình ảnh</label>
                <input type="file" class="form-control" asp-for="File" value="File" />
            </div>
        </div>

        <div>
            <div class="mt-3" style="width: 500px; height: 500px">
                <img src="@Model?.FilePath" alt="@Model?.FileName" style="width: 100%; object-fit: contain; height: 500px;">
            </div>
        </div>
    </div>

    <div class="mt-3 d-flex gap-3">
        <button type="submit" class="btn btn-secondary">Lưu</button>

        <button type="submit"
                asp-controller="ProductImages"
                asp-action="Delete"
                class="btn btn-danger">
                Xóa
        </button>
    </div>
    
</form>
