@{
    var productId = ViewBag.ProductId;
}

@model IEnumerable<Ecommerce.UI.Models.DTO.ProductImageDto>


<h1 class="mt-3">Danh sách hình ảnh</h1>

<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="ProductImages" asp-action="Add" asp-route-ProductId="@productId">Thêm hình ảnh</a>
</div>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tên ảnh</th>
            <th>Mô tả</th>
            <th>Định dạng</th>
            <th>Dung lượng</th>
            <th>Đường dẫn</th>
            <th>Hình ảnh</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var image in Model)
        {
            <tr>
                <td>@image.Id</td>
                <td>@image.FileName</td>
                <td>@image.FileDesciption</td>
                <td>@image.FileExtension</td>
                <td>@image.FileSizeInBytes</td>
                <td>@image.FilePath</td>
                <td><img src="@image.FilePath" alt="@image.FileName" style="width: 50px; height: 50px" /></td>
                <td>
                    <a asp-controller="ProductImages"
                       asp-action="Edit"
                       asp-route-id="@image.Id"
                       class="btn btn-light">Chỉnh sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
