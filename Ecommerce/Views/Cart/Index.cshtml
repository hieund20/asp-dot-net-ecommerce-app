@model Ecommerce.UI.Models.CartShowViewModel<List<Ecommerce.UI.Models.DTO.CartItemDto>, decimal>

@{
}

<h3>Giỏ hàng của bạn</h3>

@if (Model != null && Model.CartItemList.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Mã sản phẩm</th>
                <th>Tên sản phẩm</th>
                <th>Đơn giá</th>
                <th>Số lượng</th>
                <th>Tổng tiền</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItemList)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.Product?.ProductName</td>
                    <td>@item.Product?.UnitPrice</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Product?.UnitPrice * item.Quantity ?? 0)</td>
                    <td><button class="btn btn-danger">Xóa</button></td>
                </tr>
            }
        </tbody>
    </table>

    <h3 class="mt-3">Tổng tiền: @Model.TotalPrice</h3>
}
else
{
    <p>Giỏ hàng của bạn trống.</p>
}
